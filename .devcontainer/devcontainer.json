{
	"name": "SuGaR Development Environment",
	"build": {
		"dockerfile": "../Dockerfile",
		"context": ".."
	},
	"features": {},
	"runArgs": [
		"--gpus=all",
		"--shm-size=8g"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"bradlc.vscode-tailwindcss",
				"esbenp.prettier-vscode",
				"ms-vscode.vscode-json"
			],
			"settings": {
				"python.defaultInterpreterPath": "/opt/conda/envs/sugar/bin/python",
				"python.terminal.activateEnvironment": true,
				"python.condaPath": "/opt/conda/bin/conda",
				"jupyter.defaultKernel": "Python 3 (sugar)",
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash",
						"args": ["-c", "source /opt/conda/etc/profile.d/conda.sh && conda activate sugar && exec bash"]
					}
				}
			}
		}
	},
	"forwardPorts": [3000],
	"portsAttributes": {
		"3000": {
			"label": "SuGaR Viewer",
			"onAutoForward": "notify"
		}
	},
	"postCreateCommand": "conda activate sugar",
	"remoteUser": "root",
	"workspaceFolder": "/workspace/SuGaR",
	"mounts": [
		"source=${localWorkspaceFolder}/data,target=/workspace/SuGaR/data,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/output,target=/workspace/SuGaR/output,type=bind,consistency=cached"
	],
	"initializeCommand": "mkdir -p ${localWorkspaceFolder}/data ${localWorkspaceFolder}/output"
}
